<odoo>
    <!-- invoice -->
    <record id="res_config_settings_view_form_invoice" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.invoice</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='account_followup']/.." position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="account_financial_risk_invoice">
                    <div class="o_setting_left_pane">
                        <field name="invoice_block" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="invoice_block"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
