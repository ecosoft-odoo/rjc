<odoo>
    <!-- inventory -->
    <record id="res_config_settings_view_form_stock_block" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.stock.block</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='production_lot_info']/." position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="account_financial_risk_stock_block">
                    <div class="o_setting_left_pane">
                        <field name="stock_block" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="stock_block"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
